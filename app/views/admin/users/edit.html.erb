<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザー情報編集</h2>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :トップ画像 %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group" rows="4" cols="40">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction , size: "40x15",class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit 'へんしゅう', class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>