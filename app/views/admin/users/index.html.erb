<h4 class="text-center mt-5">ユーザー一覧</h4><br/>
<div class="container">
  <div class="row">
      <% @users.each do |user| %>
        <table class="table table-hover">
          <tr>
            <td class="text-center", style="width: 20%">
              <%= image_tag user.get_profile_image(50,50) %>
            </td>
            <td class="align-middle h4", style="width: 20%">
              <%= link_to "#{user.name}", admin_user_path(user.id), class: "text-dark text-decoration-none" %>
            </td>
            <td class="align-middle">
              <%= user.introduction %>
            </td>
          </tr>
        </table>
      <% end %>
  </div>
</div>