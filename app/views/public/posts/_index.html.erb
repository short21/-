<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
          <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>