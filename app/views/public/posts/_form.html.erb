<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-5">つぶやく</h1>
        <%= form_with model: post do |f| %>

          <h4 class="mt-5 mb-3">つたえたいことを書いてみよう！</h4>
          <%= f.text_area :body,size: "60x15" %>

          <!-- 追加部分 -->
          <h4 class="mt-3">がぞう</h4>
          <%= f.file_field :image, accept: "image/*" %>
          <ul class="mt-5 h4" style="list-style: none;"><h5 class="text-center">つぶやきチェック</h5>
            <li>
              <%= check_box_tag :post %><%= label_tag :post, "だれかをきずつけることは書いていませんか？" ,class: " h5 ml-3" %>
            </li>
            <li>
              <%= check_box_tag :post %><%= label_tag :post, "かおのしゃしんを送ろうとしていませんか？" ,class: " h5 ml-3" %>
            </li>
            <li>
              <%= check_box_tag :post %><%= label_tag :post, "お家や名前が分かることは書いていませんか？" ,class: " h5 ml-3" %>
            </li>
　        </ul>
          <div class="text-center">
            <%= f.submit 'つぶやく',class: "btn btn-success" %>
          </div>

        <% end %>
    </div>
  </div>
</div>

