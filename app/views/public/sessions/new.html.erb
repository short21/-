<%= render "public/shared/error_messages", resource: resource %>
<%= stylesheet_link_tag "session", :media => "all" %>
<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class = "text-center">Hatune</h2>
      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %><br />
          </div>
          <div class="column-right">
            <%#= link_to "パスワードを忘れた場合" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "パスワード" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          続行することで、Hatuneの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class = "box-newusr">
       <p><span>------------</span> はつねの新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "Hatuneアカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div>

