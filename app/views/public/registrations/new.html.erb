<%= render "public/shared/error_messages", resource: resource %>
<%= stylesheet_link_tag "registration", :media => "all" %>
<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class = "text-center">Hatune</h2>
      <div class="box-email">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name,:size=>"35",autofocus: true, autocomplete: "ユーザー名" %>
      </div>
      <div class="box-email">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :email, "メールアドレス" %><br />
          </div>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
          </div>
          <div class="column-right">
            <%#= link_to "パスワードを忘れた場合" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "パスワード" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード(確認用)" %><br />
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "パスワード（確認用）" %>
      </div>
      <div class="box-login">
        <%= f.submit "アカウントの作成" %>
        <div class="legal-text">
          続行することで、Hatuneの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class = "box-newusr">
       <p><span>------</span> すでにアカウントを作成されていますか？ <span>------</span></p>
      <%= link_to "Hatuneアカウントにログイン", user_session_path %>
    </div>
  </div>
</div>
